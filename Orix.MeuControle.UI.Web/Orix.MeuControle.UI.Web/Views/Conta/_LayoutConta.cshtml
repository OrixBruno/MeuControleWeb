<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Html.Partial("_PartialEstilos")
</head>
<body>
    <div class="video-container">
        <video loop autoplay class="video-background" src="~/Content/video/Aula_01.mp4"></video>
        <header>
            @Html.Partial("_PartialMenu")
        </header>
        <section>
            <div class="container">
                @RenderBody()
            </div>
        </section>
        <footer>
            @Html.Partial("_PartialFooter")
        </footer>
    </div>

    @* Scripts *@
    @Html.Partial("_PartialScripts")
</body>
</html>
