<div id="mensagem">
</div>
<div class="btn btn-marginTop-15">
    <input type="submit" name="carregar" id="carregar" value="Carregar" class="btn btn-default" />
</div>
<div id="conteudoLista">
</div>
@section ChamadaAjax{
    <script>
        $('#carregar').click(function () {
            CarregarLista();
        });

        function CarregarLista() {
            $.ajax(
            {
                type: 'GET',
                url: '/ControleMapas/Surdo/ObterListaSurdos',
                dataType: 'html',
                cache: false,
                async: true,
                beforeSend: function () {
                    $('#myModal').modal('show');
                },
                success: function (data) {
                    $('#conteudoLista').html(data);
                },
                complete: function () {
                    $('#myModal').modal('hide');
                }
            });
        }
        function Excluir(codigo) {
            $.ajax({
                type: 'GET',
                url: '/ControleMapas/Surdo/Excluir/' + codigo,
                async: true,
                cache: false,
                beforeSend: function () {
                    $('#myModal').modal('show');
                },
                success: function (data) {
                    $('#mensagem').html(data);
                    CarregarLista();
                },
                complete: function () {
                    $('#myModal').modal('hide');
                }
            });
        };

        //ATIVAR CARREGAMENTO ASYNC
        $(document).ready(function () {
            setInterval(CarregarLista, 30000);
        });
    </script>
}
