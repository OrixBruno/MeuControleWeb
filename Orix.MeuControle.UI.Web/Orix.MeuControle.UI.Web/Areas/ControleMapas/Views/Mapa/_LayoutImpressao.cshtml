<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Html.Partial("_PartialEstilos")

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/mapa.css" rel="stylesheet" />

    <script src="~/Scripts/funcoes.js"></script>

</head>
<body>
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Controle de Mapas", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Mapas<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="Mapa/Impressao">Impressão</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <section>
        <div>
            @RenderBody()
        </div>
    </section>
    <footer>
        <div>
            @Html.Partial("_PartialFooter")
        </div>
    </footer>

    @Html.Partial("_PartialScripts")
</body>
</html>